#include <iostream>

using namespace std;
int mindr[10000],j,n,i,a[10000],maxst[10000],difmax;
int main()
{
    cin>>n;
    for(i=1;i<=n;i++)
        cin>>a[i];
    int st[100000];
    int dr[100000];
    maxst[0]=a[0];
    for(i=1;i<n;i++){
    maxst[i]=max(maxst[i-1],a[i]);}

    mindr[n-1]=a[n-1];
    for (i=n-1;i>=0;i--)
    mindr[i]=min(mindr[i+1],a[i]);
st[0]=a[0];
for (i=0;i<n;i++)
    st[i]=maxst[i-1]-a[i];
dr[n-1]=a[n-1];
    for (i=n-2;i>0;--i) dr[i]=a[i]-mindr[i+1];
    for (i=0;i<n;i++){
            if(st[i]+dr[i+1]>difmax) difmax=st[i]+dr[i+1];

    }
    cout<<difmax;
    return 0;
}
